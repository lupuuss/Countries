<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="textColorDark">@color/textColorDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="countriesDividerColor">@color/countriesDividerColor</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorControlNormal">?android:textColor</item>
        <item name="backgroundColorAlpha">@color/backgroundColorAlpha</item>
    </style>

    <style name="AppTheme.ErrorMessage">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?textColorDark</item>
    </style>
    <style name="AppTheme.Button">
        <item name="android:background">@drawable/classic_button</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.CountryText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">?textColorDark</item>
        <item name="android:padding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/country_item_background</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
    </style>

    <style name="AppTheme.DetailsText">d
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?textColorDark</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:background">@drawable/detail_item_background</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:elevation">8dp</item>
        <item name="titleTextColor">?android:textColor</item>
    </style>

    <style name="AppTheme.FlagBack">
        <item name="android:padding">10dp</item>
        <item name="android:background">?colorPrimaryLight</item>
    </style>

    <style name="AppTheme.CountryLabel">
        <item name="android:textSize">23sp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CountryLabel.Center" parent="AppTheme.CountryLabel">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.ErrorMessageBack">
        <item name="android:background">@drawable/error_message_background</item>
    </style>
</resources>
