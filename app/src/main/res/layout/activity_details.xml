<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="details"
            type="com.github.lupuuss.countries.model.dataclass.CountryDetails" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detailsToolbar"
            android:background="?android:colorPrimary"
            android:elevation="6dp"
            app:titleTextColor="#FFF"
            app:title="@string/details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"/>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context=".ui.modules.countrydetails.DetailsActivity"
            app:layout_constraintTop_toBottomOf="@id/detailsToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/countryNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:elevation="6dp"
            android:background="?android:colorPrimary"
            tools:text="Poland"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/flagImage"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/countryFlag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/countryNameTextView" />

        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/countryNameTextView"
            app:layout_constraintEnd_toStartOf="@id/flagImage">
            <TextView
                android:theme="@style/AppTheme.CountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/nativeName(details.nativeName)}" />
            <TextView
                android:theme="@style/AppTheme.CountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/capital(details.capital)}" />
            <TextView
                android:theme="@style/AppTheme.CountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/area(details.formattedArea)}" />

            <TextView
                android:theme="@style/AppTheme.CountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/demonym(details.demonym)}" />
            <TextView
                android:theme="@style/AppTheme.CountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/population(details.formattedPopulation)}" />
            <TextView
                android:theme="@style/AppTheme.CountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/gini(details.formattedGini)}" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>